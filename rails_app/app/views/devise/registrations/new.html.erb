<h2>Please register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="col-sm-12 col-md-6 col-lg-4">
  <div class="field">
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Enter email address', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'sr-only' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter password', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'sr-only' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class: 'btn' %>
  </div>
<% end %>
  <hr>
  <%= render "devise/shared/links" %>
  <hr>
</div>
