    
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <%= product.name %>
        <%= product.description %>
        <%= product.image_url %>
        <%= product.colour %>
        <%= product.price %>
